<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Game Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš“ BATTLEBOAT âš“"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Enemy Grid Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enemy Waters ðŸŽ¯"
                android:textSize="16sp"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.battleboat.GridView
                android:id="@+id/enemy_grid"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#FFFFFF"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Ship Placement Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Game Status -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Your Ships"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="#E0E0E0" />

            <!-- Action Button -->
            <Button
                android:id="@+id/action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Place Ships"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#1976D2"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp" />

        </LinearLayout>

        <!-- Player Grid Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Fleet ðŸš¢"
                android:textSize="16sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.battleboat.GridView
                android:id="@+id/player_grid"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#FFFFFF"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Game Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Tap your grid to place ships\nâ€¢ Tap enemy grid to shoot\nâ€¢ Sink all enemy ships to win!"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:lineSpacingExtra="4dp" />

        <!-- Statistics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Statistics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Win Stats -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wins"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/stats_wins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 of 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/stats_win_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                </LinearLayout>

                <!-- Accuracy Stats -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accuracy"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/stats_accuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                    <TextView
                        android:id="@+id/stats_shots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 hits / 0 shots"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </LinearLayout>

            <!-- Additional Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <!-- Win Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Win Streak"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/stats_win_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />

                </LinearLayout>

                <!-- Ships Sunk -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ships Sunk"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/stats_ships_sunk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F44336" />

                </LinearLayout>

            </LinearLayout>

            <!-- Reset Stats Button -->
            <Button
                android:id="@+id/reset_stats_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="Reset Stats"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:backgroundTint="#757575"
                android:textColor="#FFFFFF"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Bottom spacer for comfortable scrolling -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</ScrollView> 